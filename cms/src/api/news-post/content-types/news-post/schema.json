{
  "kind": "collectionType",
  "collectionName": "news_posts",
  "info": {
    "singularName": "news-post",
    "pluralName": "news-posts",
    "displayName": "news-post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Новость",
        "Статья",
        "Обзор"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "date": {
      "type": "datetime"
    },
    "comments": {
      "type": "integer"
    },
    "views": {
      "type": "integer"
    },
    "tags": {
      "type": "string",
      "required": true
    },
    "contents": {
      "type": "richtext",
      "required": true
    }
  }
}
